#: import Receipt cin.uix.receipt
#: import Search cin.uix.search

<NumberButton>
	size_hint: 1, 1
	font_size: '20sp'
	md_bg_color: app.theme_cls.primary_color
    text_color: 1, 1, 1, 1
	icon_color: 1, 1, 1, 1
	icon: ''


<NumberActionButton>
	size_hint: 1, 1
	font_size: '20sp'
	md_bg_color: app.theme_cls.primary_color
    text_color: 1, 1, 1, 1
	icon_color: 1, 1, 1, 1

<DialogCard>
	elevation: '3dp'
	radius: 0
	orientation: 'vertical'
	padding: '10dp'
	

<PayDialog>
	type: 'custom'
	size_hint_x: None
	width: '600dp'


<CashContent>
	size_hint_y: None
	height: '350dp'
	spacing: '10dp'
	padding: '0dp', '10dp'

	MDGridLayout:
		cols: 3
		rows: 4
		spacing: '5dp'

		PayNumberButton:
			text: '7'

		PayNumberButton:
			text: '8'

		PayNumberButton:
			text: '9'

		PayNumberButton:
			text: '4'

		PayNumberButton:
			text: '5'

		PayNumberButton:
			text: '6'

		PayNumberButton:
			text: '1'

		PayNumberButton:
			text: '2'

		PayNumberButton:
			text: '3'

		PayNumberButton:
			text: '0'

		PayNumberButton:
			text: '00'

		PayNumberButton:
			text: ','
	

	DialogCard:
		MDLabel:
			size_hint_y: None
			height: '30dp'
			text: 'Gegeben:'
			theme_text_color: 'Custom'
			text_color: app.theme_cls.primary_dark

		MDSeparator

		GivenCashField:
			id: given_cash
			halign: 'center'
			font_size: '46sp'
			text_color_normal: 'gray'

		MDLabel:
			size_hint_y: None
			height: '30dp'
			text: 'Zu zahlender Betrag'
			theme_text_color: 'Custom'
			text_color: app.theme_cls.primary_dark

		MDSeparator

		ToPayLabel:
			id: to_pay
			halign: 'center'
			theme_text_color: 'Custom'
			text_color: 'gray'
			font_style: 'H3'

		MDLabel:
			size_hint_y: None
			height: '30dp'
			text: 'Rückgabe'
			theme_text_color: 'Custom'
			text_color: app.theme_cls.primary_dark

		MDSeparator

		ReturnCash:
			id: return_cash
			halign: 'center'
			font_style: 'H3'


<CashPayDialog>
	title: 'Barzahlung'


<Sale>
	padding: '5dp'
	orientation: 'vertical'
	size_hint_x: None
	width: '500dp'
	elevation: 4
	md_bg_color: 1, 1, 1, 1

	Search

	Receipt

	MDBoxLayout:
		size_hint_y: None
		height: '400dp'
		orientation: 'vertical'
		MDSeparator
			size_hint_x: None
			width: '120dp'
			pos_hint: {'x': 0.74}
		MDBoxLayout:
			orientation: 'vertical'
			size_hint_y: None
			padding: '15dp'
			height: '40dp'

			Sum:
				halign: 'right'
				text: '0,00€'
				font_style: 'H6'

		ScreenManager:
			id: number_screen_manager

			MDScreen:
				name: 'first_screen'
				BoxLayout:
					orientation: 'horizontal'

					MDGridLayout:
						cols: 3
						rows: 4
						spacing: '5dp'
						padding: '5dp'

						NumberButton:
							text: '7'

						NumberButton:
							text: '8'

						NumberButton:
							text: '9'


						NumberButton:
							text: '4'

						NumberButton:
							text: '5'

						NumberButton:
							text: '6'

						NumberButton:
							text: '1'

						NumberButton:
							text: '2'

						NumberButton:
							text: '3'

						NumberButton:
							text: '+'

						NumberButton:
							text: '0'

						NumberButton:
							text: '-'

					MDBoxLayout:
						size_hint_x: None
						width: '190sp'
						orientation: 'vertical'
						spacing: '5dp'
						padding: '0dp', '5dp','5dp', '5dp'

						NumberActionButton:
							text: ' mehr'
							icon: 'page-next-outline'
							halign: 'left'
							on_press:
								root.ids.number_screen_manager.transition.direction = 'left'
								root.ids.number_screen_manager.current = 'second_screen'

						NumberActionButton:
							text: ' Kartenzahlung'
							icon: 'credit-card-check-outline'
							halign: 'left'

						CashButton:
							text: ' Barzahlung'
							icon: 'cash-multiple'
							halign: 'left'

						NumberActionButton:
							text: ' Enter'
							icon: 'send'
							halign: 'left'
							on_press:
								app.refs['pos_screen_manager'].current = 'results'

			MDScreen:
				name: 'second_screen'
				BoxLayout:
					orientation: 'horizontal'

					MDGridLayout:
						cols: 3
						rows: 4
						spacing: '5dp'
						padding: '5dp'
						row_default_height: '85dp'
						row_force_default: True
						NumberActionButton:
							text: ' back'
							icon: 'page-previous-outline'
							halign: 'left'
							on_press:
								root.ids.number_screen_manager.transition.direction = 'right'
								root.ids.number_screen_manager.current = 'first_screen'

						NumberActionButton:
							text: ' Deposit'
							icon: 'cash-plus'
							halign: 'left'

						NumberActionButton:
							text: 'Withdrawal'
							icon: 'cash-minus'
							halign: 'left'

						NumberActionButton:
							text: 'Checkout'
							icon: 'cash-refund'
							halign: 'left'
