#: import get_color_from_hex kivy.utils.get_color_from_hex
#: import SettingsScreen cin.uix.settings
#: import PosScreen cin.uix.pos
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<Root>
	orientation: 'vertical'
	# md_bg_color: app.theme_cls.primary_dark

	MDToolbar:
		id: 'toolbar'
		height: 50
		# elevation: 10
		md_bg_color: app.theme_cls.primary_dark
		title: 'CIN'

	MDBoxLayout:
		spacing: 4

		MDNavigationRail:
			elevation: 10

			MDNavigationRailItem:
				icon: 'point-of-sale'
				text: 'POS'

				on_release:
					app.root.ids.main_screen_manager.current = 'pos'

			MDNavigationRailItem:
				icon: 'cog-outline'
				text: 'Settings'

				on_release:
					app.root.ids.main_screen_manager.current = 'settings'

		MDScreen:
			ScreenManager:
				id: main_screen_manager
				transition: FadeTransition()

				PosScreen:
					name: 'pos'

				SettingsScreen:
					name: 'settings'
