
<ReceiptListItem>
	number: ''
	product: ''
	quantity: ''
	price: ''
	orientation: 'vertical'
	md_bg_color: 1, 1, 1, 1

	MDBoxLayout:
		orientation: 'horizontal'
		MDCheckbox

		MDLabel:
			text: root.number

		MDLabel:
			text: root.product

		MDLabel:
			text: root.quantity

		MDLabel:
			text: root.price
<Ggg@RecycleBoxLayout+BackgroundColorBehavior>

<Receipt>
    viewclass: 'ReceiptListItem'


    Ggg:
		md_bg_color: 0.9, 0.9, 0.9, 1.0
        default_size: None, dp(56)
        default_size_hint: 1, None
		spacing: 1
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

