
<ReceiptListItem>
	number: ''
	product: ''
	quantity: ''
	price: ''
	orientation: 'vertical'
	md_bg_color: 1, 1, 1, 1

	MDBoxLayout:
		orientation: 'horizontal'
		MDCheckbox

		MDLabel:
			text: root.number

		MDLabel:
			text: root.product

		MDLabel:
			text: root.quantity

		MDLabel:
			text: root.price


<ReceiptList>
    viewclass: 'ReceiptListItem'

    ReceiptLayout:
		md_bg_color: 0.9, 0.9, 0.9, 1.0
        default_size: None, dp(56)
        default_size_hint: 1, None
		spacing: 1
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<Receipt>
	orientation: 'vertical'
	# spacing: 5

	MDBoxLayout:
		orientation: 'horizontal'
        size_hint_y: None
        height: dp(30)

		MDCheckbox

		MDLabel:
			bold: True
			text: 'Nr.'

		MDLabel:
			bold: True
			text: 'Product'

		MDLabel:
			bold: True
			text: 'Qty.'

		MDLabel:
			bold: True
			text: 'Price'

		# md_bg_color: app.theme_cls.primary_light


	ReceiptList

	MDBoxLayout:
		orientation: 'horizontal'
        size_hint_y: None
        height: dp(30)

		MDLabel:
			bold: True
			text: 'Sum:'

		MDLabel:
			bold: True
			text: ''

		MDLabel:
			bold: True
			text: ''

		MDLabel:
			bold: True
			text: ''

		MDLabel:
			bold: True
			text: '21.34'
