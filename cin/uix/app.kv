#: import CardTransition kivy.uix.screenmanager.CardTransition

<PosNavigation>
	icon: 'point-of-sale'
	text: 'POS'

<AppNavigation>
	elevation: 10
	type: 'standard'
	# size_hint_x: None
	# width: '190dp'

	ScrollView:
		MDList:
			OneLineIconListItem:
				text: 'POS'
				on_release: 
					root.parent.parent.ids.main_screen_manager.transition.direction = 'up'
					root.parent.parent.ids.main_screen_manager.current = 'settings'

				IconLeftWidget:
					icon: 'point-of-sale'

			OneLineIconListItem:
				text: 'Settings'
				on_release: 
					root.parent.parent.ids.main_screen_manager.transition.direction = 'down'
					root.parent.parent.ids.main_screen_manager.current = 'pos'

				IconLeftWidget:
					icon: 'cog-outline'


<App>
	orientation: 'vertical'

	AppBar:
		id: toolbar
		height: 30
		md_bg_color: app.theme_cls.primary_dark
		title: 'CIN'
		left_action_items:
            [['menu', lambda x: navigation.set_state('toggle')]]

	MDNavigationLayout:
		ScreenManager:
			id: main_screen_manager
			transition: CardTransition()

			MDScreen:
				name: 'pos'

				MDLabel:
					text: 'pos'

			# PosScreen:
				# name: 'pos'

			SettingsScreen:
				name: 'settings'

		AppNavigation:
			id: navigation


