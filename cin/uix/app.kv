#: import SettingsScreen cin.uix.settings
#: import PosScreen cin.uix.pos
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import CardTransition kivy.uix.screenmanager.CardTransition

<PosNavigation>
	icon: 'point-of-sale'
	text: 'POS'

<AppNavigation>
	use_hover_behavior: True
	elevation: 10
	
	MDNavigationRailItem:
		icon: 'point-of-sale'
		text: 'POS'

		on_release:
			app.app.ids.main_screen_manager.current = 'pos'
			app.app.ids.main_screen_manager.transition.direction = 'down'

	MDNavigationRailItem:
		icon: 'cog-outline'
		text: 'Settings'

		on_release:
			app.app.ids.main_screen_manager.current = 'settings'
			app.app.ids.main_screen_manager.transition.direction = 'up'


<App>
	orientation: 'vertical'

	AppBar:
		id: 'toolbar'
		height: 50
		md_bg_color: app.theme_cls.primary_dark
		title: 'CIN'

	MDBoxLayout:
		spacing: 4

		AppNavigation

		MDScreen:
			ScreenManager:
				id: main_screen_manager
				transition: CardTransition()

				PosScreen:
					name: 'pos'

				SettingsScreen:
					name: 'settings'
