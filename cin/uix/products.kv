<Products>
	orientation: 'vertical'

	ScrollView:
		size_hint_y: None
		height: '60dp'
		do_scroll_y: False

		ProductNavigation:
			md_bg_color: 1, 1, 1, 1
			segment_color: 0.95, 0.95, 0.95, 1
			size_hint_y: None
			radius: 0

			MDSegmentedControlItem:
				text: md_icons['home']
				font_style: 'Icon'

			MDSegmentedControlItem:
				text: 'fff'

	# MDSeparator
	ProductGrid
