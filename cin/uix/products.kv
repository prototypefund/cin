<ProductCard>
	radius: '0dp'
	# size_hint: None, None
	# width: dp(100)
	# height: dp(100)
	elevation: 4


<ProductGrid>
    viewclass: 'ProductCard'

    ProductLayout:
		cols: 3
		padding: dp(10)
		spacing: dp(10)
        size_hint_y: None
		height: self.minimum_height

