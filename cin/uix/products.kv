#: import md_icons kivymd.icon_definitions.md_icons

<ProductInfo>
	orientation: 'vertical'
	size_hint_y: None
    height: "200dp"
	MDSeparator
	
	MDGridLayout:
		cols: 2
		padding: '0dp', '20dp'

		MDLabel:
			text: 'Name:'

		MDLabel:
			text: root.name

		MDLabel:
			text: 'Hersteller:'

		MDLabel:
			text: root.brand

		MDLabel:
			text: 'Beschreibung:'

		MDLabel:
			text: root.description

		MDLabel:
			text: 'Einkaufspreis:'

		MDLabel:
			text: root.price

		MDLabel:
			text: 'Verkaufspreis:'

		MDLabel:
			text: root.sale_price

		MDLabel:
			text: 'Steuersatz:'

		MDLabel:
			text: root.tax

		MDLabel:
			text: 'EAN-Code:'

		MDLabel:
			text: root.ean_code

<ProductCard>
	radius: '0dp'
	# size_hint: None, None
	# width: dp(200)
	# height: dp(150)
	elevation: 4

    MDRelativeLayout:

		Image:
			size_hint_x: 1
			source: root.image

        MDIconButton:
            icon: 'information-outline'
            pos_hint: {'top': 1, 'right': 1}
			on_release: root.info.open()

		MDBoxLayout:
			orientation: 'vertical'
			size_hint_y: None
			height: '40dp'
			padding: '5dp'
			md_bg_color: 0.9, 0.9, 0.9, 0.9

			MDLabel:
				id: label
				text: root.name
				# color: "grey"
			MDLabel:
				id: label
				font_style: 'Body2'
				text: root.price
				# color: "grey"

<ProductGrid>
	# do_scroll_y: True
	MDGridLayout:
		id: grid
		size_hint_y: None
		cols: 2
		col_default_width: '200dp'
		row_default_height: '150dp'
		col_force_default: True
		height: self.minimum_height
		padding: dp(10)
		spacing: dp(15)

